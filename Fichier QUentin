//Controller

<?php

namespace App\Http\Controllers;

use App\Models\comments;
use Illuminate\Http\Request;

class MainController extends Controller
{
    public function index() {
        $comments = comments::all();
        return view('index', ['comments' => $comments]);
    }
}

